function reset_timer(x)
timer=x
end

function _init()
timer=0
timer_running=false
reset_timer(100)
show_text=false
end


function _update()
	--dev testing 
	if btn(5) then
		timer_running=true
	end
	
	--timer
	if timer_running then
		timer-=1
		show_text=true
		if timer==0 then
			reset_timer(100)
			show_text=false
			timer_running=false
		end
	end
end


function _draw()
	cls()
	if show_text==true then
		print('hello world')
		print(timer)
	end
end
