pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
	menu={"start game","options","exit"}
	main_menu=true
	menu_selection=1
end

function _update()
	if btnp(⬆️) then
		menu_selection-=1
	end
	if btnp(⬇️) then
		menu_selection+=1
	end
	if menu_selection<=0 then
		menu_selection=#menu
	elseif menu_selection>=#menu+1 then
		menu_selection=1
	end

end

function _draw()
cls()
	if main_menu then
		for i in all(menu) do
			print(i)
			print(menu_selection)
		end
	end
end

